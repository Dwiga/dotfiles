" source ~/local/.vimrc.local
set nocompatible
filetype off

set rtp+=~/.vim/bundle/Vundle.vim
call vundle#begin()

Plugin 'VundleVim/Vundle.vim'
Plugin 'itchyny/lightline.vim'
Plugin 'frazrepo/vim-rainbow'
Plugin 'preservim/nerdtree'

call vundle#end()
filetype plugin indent on

set number
syntax on
set tabstop=2
set autoindent
